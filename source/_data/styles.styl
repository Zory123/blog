// Custom styles.

:root
  font-size 87.5%

// 让表格列宽度根据内容自适应
table
  table-layout auto

.inline-block
  display inline-block

.pagination
  border: none
  margin-top: 60px

  .page-number,
  .next
    border-top: none
    padding: 12px 24px
    margin: 0
    transition .4s

    &:not(.current):hover
      background-color: var(--card-bg-color)

.header
  font-size: 110%
  padding-bottom: 70px
  border-bottom: 4px dashed var(--card-bg-color)

  .brand
    padding-top: 4px
    padding-bottom: 4px

.footer
  font-size: 100%
  padding-top: 56px
  padding-bottom: 56px
  border-top 1px solid #eee

.sidebar
  font-size: 110%

.author
  margin-right 8px

.theme-info
  margin-left 8px

.fa.fa-pencil
  font-size: 21px

.external-link
  margin 28px

  > a
    margin 0 .5em

.highlight-wrap[data-rel]
  position relative

  &::before
    content attr(data-rel)
    position absolute
    font-family consolas, Menlo, "PingFang SC", "Microsoft YaHei", monospace
    top -10px
    right 20px
    line-height 1.6
    font-size 14px
    transition color .4s
    color $blue-bright

  &:hover::before
    color $blue

// 锚点
.post-body
  h1, h2, h3, h4, h5, h6
    > a
      border-bottom none

      &:hover
        &::before
          content '#'
          position absolute
          margin-left -0.8em

  h1
    margin-top 96px

  h2, h3, h4, h5, h6
    margin-top 48px

  p
    text-align left

// 列表样式
.posts-expand
  .post-title
    line-height: 1.6
    margin-bottom: 12px

    .post-edit-link
      line-height: 1

  .post-meta
    .post-description
      margin-top 48px
      padding 24px
      background #eee
      text-align left

  .post-body ul
    li
      list-style unset

    > li
      list-style circle

      > ul > li
        list-style square

      > ol > li
        list-style lower-roman

  .followme
    margin-top: 40px
    flex-direction row

    p
      margin: 0

    .social-item
      padding: 0 2em
      margin: 0

  .post-tags
    font-size: 120%

  .post-nav
    margin-top: 40px

// utterances
.utterances
  margin 60px 0 0
  max-width unset

// stackblitz
.stackblitz
  width 100%
  height auto
  min-height 400px
  max-height 800px

// details
details
  summary
    cursor zoom-in

    &::before
      display inline-block
      content '▶'
      margin-right 4px
      color #999
      transition transform .2s

    &::-webkit-details-marker
      display none

  &[open]
    summary
      cursor zoom-out

      &::before
        transform rotateZ(90deg)

ruby
  rt
    font-size 80%
    color #ccc

blockquote
  position relative
  padding 21px 15px 1px
  background-color #f7f7f7
  margin-bottom 20px

  p
    color #999
